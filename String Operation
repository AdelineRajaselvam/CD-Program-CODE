
Code:
#include <iostream>
#include <string>
using namespace std;

void concatenateStrings() {
    string str1, str2;
    cout << "Enter first string: ";
    cin.ignore(); // Ignore newline character
    getline(cin, str1);
    cout << "Enter second string: ";
    getline(cin, str2);
    cout << "Concatenated string: " << str1 + str2 << endl;
}

void calculateStringLength() {
    string str;
    cout << "Enter a string: ";
    cin.ignore(); // Ignore newline character
    getline(cin, str);
    cout << "Length of the string: " << str.length() << endl;
}

void compareStrings() {
    string str1, str2;
    cout << "Enter first string: ";
    cin.ignore(); // Ignore newline character
    getline(cin, str1);
    cout << "Enter second string: ";
    getline(cin, str2);
    if (str1 == str2)
        cout << "Strings are equal.\n";
    else
        cout << "Strings are not equal.\n";
}

int main() {
    int choice;

    do {
        cout << "Menu:\n";
        cout << "1. Concatenate Strings\n";
        cout << "2. Calculate Length of String\n";
        cout << "3. Compare Strings\n";
        cout << "4. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
            case 1:
                concatenateStrings();
                break;
            case 2:
                calculateStringLength();
                break;
            case 3:
                compareStrings();
                break;
            case 4:
                cout << "Exiting program.\n";
                break;
            default:
                cout << "Invalid choice. Please enter a number between 1 and 4.\n";
        }
    } while (choice != 4);

    return 0;
}

Output :

